@model IEnumerable<PaymentRecordIndexViewModel>

@{ ViewBag.Title = "Payment Records";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Payment Records</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-s btn-outline-success float-md-right" asp-action="Create">New Payment</a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Pay Date</th>
                                    <th>Month</th>
                                    <th>Tax Year</th>
                                    <th>Total Earnings</th>
                                    <th>Total Deductions</th>
                                    <th>Net Pay</th>
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.FullName
                                            </a>
                                        </td>
                                        <td>
                                            
                                        </td>
                                        <td>@item.PayDate.ToString("MM/dd/yy")</td>
                                        <td>@item.PayMonth</td>
                                        <td>@item.TaxYear</td>
                                        <td>@item.TotalEarnings.ToString("C")</td>
                                        <td>@item.TotalDeductions.ToString("c")</td>
                                        <td>
                                            <a class="text-info pr-3" asp-action="Payslip" asp-route-id="@item.Id"><i class="fa-solid fa-magnifying-glass"></i>Preview</a>
                                            <a class="text-primary pr-1" asp-action="PrintPayslip" asp-route-id="@item.Id"><i class="fa-solid fa-file-pdf"></i>PDF</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>