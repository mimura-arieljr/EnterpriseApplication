@model IEnumerable<EmployeeIndexViewModel>

@{ ViewBag.Title = "Employee";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-s btn-outline-success float-md-right" asp-action="Create">Add Employee</a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee No</th>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Designation</th>
                                    <th>City</th>
                                    <th>Date Joined</th>
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.EmployeeNo
                                            </a>
                                        </td>
                                        <td>
                                            <img alt="image" src="@Url.Content(item.ImageURL)" />
                                        </td>
                                        <td>@item.FullName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Designation</td>
                                        <td>@item.EmployeeCity</td>
                                        <td>@item.DateJoined.ToString("MM/dd/yy")</td>
                                        <td>
                                            <a class="text-info pr-3" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square text-info"></i>Edit</a>
                                            <a class="text-primary pr-1" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash text-primary"></i>Delete</a>
                                            @*<button type="button" class="btn text-danger" value="Open Modal Popup" onclick="ShowModalPopUp(@item.Id);"><i class="fa-solid fa-trash text-primary"></i> Delete</button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

